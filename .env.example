# Environment Variables Template
# Copy this file to .env and configure values for your environment

# Server Configuration
API_PORT=8000
SHINY_PORT=3838

# Data Directory Configuration
# For local development, use relative path
# For production, use absolute path within container
DATA_DIR=./server/data

# Host Configuration
# For local development
API_HOST=127.0.0.1
SHINY_HOST=127.0.0.1

# For production (Docker containers)
# API_HOST=0.0.0.0
# SHINY_HOST=0.0.0.0

# Frontend Configuration (for build-time environment variables)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SHINY_URL=http://localhost:3838

# Production URLs (update these when deploying)
# REACT_APP_API_URL=https://your-api-service.onrender.com
# REACT_APP_SHINY_URL=https://your-shiny-service.onrender.com
